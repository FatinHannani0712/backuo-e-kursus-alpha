<?php
session_start();
require_once 'config.php';

// Admin access only
if (!isset($_SESSION['role']) || $_SESSION['role'] !== 'admin') {
    header("Location: dashboard.php");
    exit();
}

// Handle account activation toggle
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['toggle_status'])) {
    $userId = (int)$_POST['user_id'];
    $currentStatus = (int)$_POST['current_status'];
    $newStatus = $currentStatus ? 0 : 1;
    
    $stmt = $conn->prepare("UPDATE users SET is_verified = ? WHERE id = ? AND role = 'user'");
    $stmt->bind_param("ii", $newStatus, $userId);
    
    if ($stmt->execute()) {
        $_SESSION['success'] = $newStatus ? "Akaun diaktifkan" : "Akaun dinyahaktifkan";
    }
    $stmt->close();
    header("Location: manage_participants.php");
    exit();
}

// Handle soft delete
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['delete_user'])) {
    $userId = (int)$_POST['user_id'];
    
    // Soft delete by setting deleted_at timestamp
    $stmt = $conn->prepare("UPDATE users SET deleted_at = NOW() WHERE id = ? AND role = 'user'");
    $stmt->bind_param("i", $userId);
    
    if ($stmt->execute()) {
        $_SESSION['success'] = "Pengguna berjaya dipadam";
    }
    $stmt->close();
    header("Location: manage_participants.php");
    exit();
}

// Get search and filter parameters
$search = isset($_GET['search']) ? trim($_GET['search']) : '';
$status_filter = isset($_GET['status']) ? $_GET['status'] : 'all';
$page = isset($_GET['page']) ? (int)$_GET['page'] : 1;
$per_page = 20;
$offset = ($page - 1) * $per_page;

// Build query
$where_clauses = ["u.role = 'user'", "u.deleted_at IS NULL"];
$params = [];
$types = '';

if (!empty($search)) {
    $where_clauses[] = "(m.nama LIKE ? OR u.email LIKE ? OR u.no_kp LIKE ?)";
    $search_param = "%$search%";
    $params[] = $search_param;
    $params[] = $search_param;
    $params[] = $search_param;
    $types .= 'sss';
}

if ($status_filter === 'verified') {
    $where_clauses[] = "u.is_verified = 1";
} elseif ($status_filter === 'unverified') {
    $where_clauses[] = "u.is_verified = 0";
}

$where_sql = implode(' AND ', $where_clauses);

// Count total users
$count_sql = "SELECT COUNT(*) as total FROM users u WHERE $where_sql";
$count_stmt = $conn->prepare($count_sql);
if (!empty($params)) {
    $count_stmt->bind_param($types, ...$params);
}
$count_stmt->execute();
$total_users = $count_stmt->get_result()->fetch_assoc()['total'];
$total_pages = ceil($total_users / $per_page);

// Get users with pagination
$sql = "SELECT u.id, u.email, u.no_kp, u.is_verified, u.created_at,
        m.nama, m.tel_rumah, m.jantina,
        COUNT(dk.daftar_id) as total_courses
        FROM users u
        LEFT JOIN maklumat_diri m ON u.id = m.user_id
        LEFT JOIN daftar_kursus dk ON u.id = dk.user_id
        WHERE $where_sql
        GROUP BY u.id
        ORDER BY u.created_at DESC
        LIMIT ? OFFSET ?";

$stmt = $conn->prepare($sql);
$params[] = $per_page;
$params[] = $offset;
$types .= 'ii';
$stmt->bind_param($types, ...$params);
$stmt->execute();
$result = $stmt->get_result();
$users = [];
while ($row = $result->fetch_assoc()) {
    $users[] = $row;
}

$pageTitle = "Pengurusan Peserta";
?>

