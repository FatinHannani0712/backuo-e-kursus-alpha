    <!-- Main Content -->
    <div class="main-content">
        <div class="top-navbar">
            <h2><i class="fas fa-users me-3"></i>Pengurusan Peserta Kursus</h2>
        </div>
        
        <div class="content-wrapper">
            <?php if(isset($_SESSION['success'])): ?>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    <?= htmlspecialchars($_SESSION['success']) ?>
                </div>
                <?php unset($_SESSION['success']); ?>
            <?php endif; ?>
            
            <!-- Search and Filter -->
            <div class="filter-card">
                <form method="GET" action="" class="row g-3 align-items-end">
                    <div class="col-md-5">
                        <label class="form-label fw-bold">Cari Peserta</label>
                        <div class="search-box">
                            <i class="fas fa-search"></i>
                            <input type="text" name="search" class="form-control" 
                                   placeholder="Nama, Email, atau No. KP" 
                                   value="<?= htmlspecialchars($search) ?>">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Status</label>
                        <select name="status" class="form-select" style="border-radius: 12px; border: 2px solid #e2e8f0;">
                            <option value="all" <?= $status_filter === 'all' ? 'selected' : '' ?>>Semua</option>
                            <option value="verified" <?= $status_filter === 'verified' ? 'selected' : '' ?>>Aktif</option>
                            <option value="unverified" <?= $status_filter === 'unverified' ? 'selected' : '' ?>>Tidak Aktif</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-filter me-2"></i>Tapis
                        </button>
                        <a href="manage_participants.php" class="btn btn-outline-secondary">
                            <i class="fas fa-redo me-2"></i>Reset
                        </a>
                    </div>
                </form>
            </div>

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>
                        <i class="fas fa-list me-2"></i>Senarai Peserta
                        <span class="stats-badge"><?= $total_users ?> peserta</span>
                    </span>
                    <a href="export_participants.php" class="btn btn-light btn-sm">
                        <i class="fas fa-download me-2"></i>Export Excel
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Peserta</th>
                                    <th>No. KP</th>
                                    <th>Telefon</th>
                                    <th>Jantina</th>
                                    <th>Kursus</th>
                                    <th>Status</th>
                                    <th>Tindakan</th>
                                </tr>
                            </thead>
                            <tbody>
                                <?php if (empty($users)): ?>
                                    <tr>
                                        <td colspan="7" class="text-center py-5 text-muted">
                                            <i class="fas fa-users fa-3x mb-3 d-block"></i>
                                            Tiada peserta dijumpai
                                        </td>
                                    </tr>
                                <?php else: ?>
                                    <?php foreach($users as $user): ?>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="user-avatar">
                                                    <?= strtoupper(substr($user['nama'] ?? $user['email'], 0, 1)) ?>
                                                </div>
                                                <div>
                                                    <div class="fw-bold">
                                                        <?= htmlspecialchars($user['nama'] ?? 'Tiada Nama') ?>
                                                    </div>
                                                    <small class="text-muted">
                                                        <?= htmlspecialchars($user['email']) ?>
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td><?= htmlspecialchars($user['no_kp']) ?></td>
                                        <td>
                                            <?php if ($user['tel_rumah']): ?>
                                                <?= htmlspecialchars($user['tel_rumah']) ?>
                                            <?php else: ?>
                                                <span class="text-muted">-</span>
                                            <?php endif; ?>
                                        </td>
                                        <td>
                                            <?php if ($user['jantina'] === 'L'): ?>
                                                <i class="fas fa-mars text-primary"></i> Lelaki
                                            <?php elseif ($user['jantina'] === 'P'): ?>
                                                <i class="fas fa-venus text-danger"></i> Perempuan
                                            <?php else: ?>
                                                <span class="text-muted">-</span>
                                            <?php endif; ?>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">
                                                <?= $user['total_courses'] ?> kursus
                                            </span>
                                        </td>
                                        <td>
                                            <?php if ($user['is_verified']): ?>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check"></i> Aktif
                                                </span>
                                            <?php else: ?>
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-times"></i> Tidak Aktif
                                                </span>
                                            <?php endif; ?>
                                        </td>
                                        <td>
                                            <a href="view_participant.php?id=<?= $user['id'] ?>" 
                                               class="btn btn-sm btn-info btn-action" 
                                               title="Lihat Profil">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            
                                            <form method="post" class="d-inline">
                                                <input type="hidden" name="user_id" value="<?= $user['id'] ?>">
                                                <input type="hidden" name="current_status" value="<?= $user['is_verified'] ?>">
                                                <button type="submit" name="toggle_status" 
                                                        class="btn btn-sm <?= $user['is_verified'] ? 'btn-warning' : 'btn-success' ?> btn-action"
                                                        title="<?= $user['is_verified'] ? 'Nyahaktif' : 'Aktifkan' ?>">
                                                    <i class="fas fa-power-off"></i>
                                                </button>
                                            </form>
                                            
                                            <form method="post" class="d-inline" 
                                                  onsubmit="return confirm('Adakah anda pasti ingin memadamkan peserta ini?');">
                                                <input type="hidden" name="user_id" value="<?= $user['id'] ?>">
                                                <button type="submit" name="delete_user" 
                                                        class="btn btn-sm btn-danger btn-action"
                                                        title="Padam">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <?php endforeach; ?>
                                <?php endif; ?>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <!-- Pagination -->
            <?php if ($total_pages > 1): ?>
            <nav>
                <ul class="pagination justify-content-center">
                    <?php if ($page > 1): ?>
                    <li class="page-item">
                        <a class="page-link" href="?page=<?= $page - 1 ?>&search=<?= urlencode($search) ?>&status=<?= $status_filter ?>">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                    <?php endif; ?>
                    
                    <?php for ($i = max(1, $page - 2); $i <= min($total_pages, $page + 2); $i++): ?>
                    <li class="page-item <?= $i === $page ? 'active' : '' ?>">
                        <a class="page-link" href="?page=<?= $i ?>&search=<?= urlencode($search) ?>&status=<?= $status_filter ?>">
                            <?= $i ?>
                        </a>
                    </li>
                    <?php endfor; ?>
                    
                    <?php if ($page < $total_pages): ?>
                    <li class="page-item">
                        <a class="page-link" href="?page=<?= $page + 1 ?>&search=<?= urlencode($search) ?>&status=<?= $status_filter ?>">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                    <?php endif; ?>
                </ul>
            </nav>
            <?php endif; ?>
        </div>
